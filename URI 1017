import java.util.Locale;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {

	Locale.setDefault(Locale.US);
	Scanner sc = new Scanner (System.in);
	
	int hours, km, middle;
	double total;
	
	hours = sc.nextInt();
	km = sc.nextInt();
	
	middle = hours * km; 
	
	total = (double) middle / 12;
	
	System.out.printf("%.3f%n", total);
	
	sc.close();
	
	}

}
