import java.util.Scanner;

public class Main {

	
	public static void main(String[] args) {
	
	Scanner sc = new Scanner (System.in);	
		
	int n =	sc.nextInt();
	int [] numbers = new int[n];
	
	for (int i = 0 ; i < n ; i++) {
		numbers[i] = sc.nextInt();
	}
	
	int maior = numbers[0];
	int position = 0;
	
	for (int i = 0 ; i < n ; i++) {
		if ( numbers[i] > maior){
			maior = numbers[i];
			position = i;
		}
	}
	
	System.out.println(maior);
	System.out.println(position);
		
	
	}
	
}
