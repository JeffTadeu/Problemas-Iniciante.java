import java.util.Locale;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {
		
		Locale.setDefault(Locale.US);
		Scanner sc =  new Scanner (System.in);
		
		double raio, A;
		
		raio = sc.nextDouble();
		raio = Math.pow(raio, 2);
		A = 3.14159 * raio; 
		
		System.out.printf("A=%.4f%n", A);
		
		sc.close();
		
		
	}

}
